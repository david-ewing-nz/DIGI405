{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Knit Current File",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/knit_current_file.ps1",
        "-FilePath", "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false,
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Compile LaTeX (XeLaTeX)",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/compile_tex.ps1",
        "-FilePath", "${file}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false,
        "showReuseMessage": false
      },
      "problemMatcher": []
    }
  ]
}
